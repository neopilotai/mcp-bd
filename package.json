{
  "name": "mcp-bd-explorer",
  "version": "1.0.0",
  "private": true,
  "description": "Production-ready monorepo for exploring Bangladeshi domains",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "test": "turbo run test",
    "db:migrate": "cd packages/db && npm run migrate",
    "db:generate": "cd packages/db && npm run generate",
    "worker:dev": "cd apps/worker && npm run dev",
    "worker:build": "cd apps/worker && npm run build",
    "functions:deploy": "cd apps/functions && supabase functions deploy"
  },
  "devDependencies": {
    "turbo": "^1.13.4",
    "@types/node": "^20.14.0",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}